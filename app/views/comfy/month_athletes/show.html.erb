<div class='post'>
  <div>
    <span class="post_title">
      <%="#{link_to "Athletes", comfy_aotms_path} >> #{Date::MONTHNAMES[@athlete.month]} #{@athlete.year} - #{@athlete.name}".html_safe%>
    </span>
  </div>
  <div class="post_content">
    <%= image_tag @athlete.picture.file.url, :style=>"display: block; margin-left:auto; margin-right: auto;max-width:80%" if @athlete.picture %><br/>
    <%=@athlete.description.html_safe%>
  </div>
</div>
