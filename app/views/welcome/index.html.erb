<script type="text/javascript">
  $(function() {
    <% if @announcements.is_published? %>
    $("#main").prepend("<%= escape_javascript content_tag(:div, cms_block_content(:content, @announcements).html_safe, :class=>"announcements")%>");
    <% end %>
  });
</script>

<div class="box">
  <div class="wod_box">
    <div id="workout">
      Workout of the day
    </div>
    <% if @wod %>
      <div class="post">
        <span class="post_title">
          <%="#{link_to(@wod.title, comfy_blog_post_path(@wod.blog.site.path, @wod.blog.path, @wod.slug))}".html_safe%>
        </span>
        <br/>
        <div class='post_content'>
          <%=@wod.content.html_safe %>
        </div>
      </div>
    <% end %>
  </div>
</div>


