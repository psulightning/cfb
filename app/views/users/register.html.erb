<h3>Registration</h3>
<%=form_for @user, :url=>register_path,:html=>{:class=>"tabular register_form"} do |f|%>
  <p><label for="user_first">First Name:</label><%=f.text_field :first%></p>
  <p><label for="user_last">Last Name:</label><%=f.text_field :last%></p>
  <p>
    <label for="user_gender">Gender:</label>
    <%=f.select :gender, [["Male","m"],["Female","f"]]%>
  </p>
  <p>
    <label for="user_birthday">Birthday:</label>
      <%=f.date_select(:birthday, 
        {:start_year=>1950, 
          :end_year=>Date.today.year, 
          :use_short_month=>true, 
          :order=>[:month,:day,:year]},
      {:style=>"width:70px"})%>
  </p>
  <p><label for="user_login">Email Address:</label><%=f.email_field :login%></p>
  <p><label for="user_password">Password:</label><%=f.password_field :password%></p>
  <p><label for="user_password_confirm">Retype Password:</label><%=f.password_field :password_confirm%></p>
  <span style="float:right"><%= f.submit "Register" %>&nbsp;<%=f.button "Cancel", :type=>"button", :id=>"cancel_button"%></span>
<%end%>
  <script type="text/javascript">
    $(document).ready(function(){
      $("#cancel_button").click(function(){
        window.location="<%=root_url%>";
      });
    });
  </script>
