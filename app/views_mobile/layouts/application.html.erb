<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <title>CrossFit Baltimore</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application"%>
    <%= javascript_include_tag "jquery" %>
    <%= csrf_meta_tags %>
    <script type="text/javascript">
      $(document).on("touchstart", "#schedule_link", function() {
            window.open('<%=schedule_path%>');
      });
    </script>
  </head>
  <body>
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id))
          return;
        js = d.createElement(s);
        js.id = id;
        js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=454609657964653";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));</script>
    <%= nav_bar(:responsive=>true) do%>
      <%= menu_group do%>
        <%= menu_item "Home", root_path %>
      <%end%>
      <%= menu_group do %>
        <%if current_user.logged?%>
          <%= drop_down "#{current_user.first} #{current_user.last}" do%>
            <%= menu_item "My Profile", profile_path %>
            <%= menu_item "Logout", logout_path %>
          <%end%>
        <%else%>
          <%= menu_item "Login/Register", signin_path %>
        <%end%>
      <% end %>
      <%= menu_group do%>
        <%= drop_down "About CFB" do %>
          <%= menu_item "Location", "/about" %>
          <%= menu_item "What is CrossFit?", "/about#crossfit" %>
          <%= menu_item "Coaches", "/about#coaches" %>
        <%end%>
      <%end%>
      <%= menu_group do%>
        <%= drop_down "Start Here" do%>
          <%= menu_item "Get Started", "/start" %>
          <%= menu_item "Fundamentals", "/start#fundamentals"%>
          <%= menu_item "Schedule/Fees", "/start#schedule" %>
        <%end%>
      <%end%>
      <%= menu_group do %>
        <%= drop_down "WOD" do %>
          <%= menu_item "WOD Archive", blog_posts_path("","wod") %>
          <%= menu_item "Exercise Demos", "/exercises" %>
        <%end%>
      <%end%>
      <%= menu_group do %>
        <%= drop_down "Nutrition" do %>
          <%= menu_item "Paleo Lifestyle", "/nutrition/paleo"%>
          <%= menu_item "Nutrition Blog", blog_posts_path("","nutrition") %>
        <%end%>
      <%end%>
      <%= menu_group do
        menu_item "Store", "/store" 
      end%>
      <%= menu_group do 
        menu_item "Contact Us", "/contact" 
      end%>
      <%if current_user.admin?%>
        <%= menu_group do %>
          <%= drop_down "Admin" do %>
            <%= menu_item "Content Manager" , admin_cms_url %>
            <%= menu_item "MindBody" %>
          <%end%>
        <%end%>
      <%end%>
    <%end%>
    <div class="header">
      <div style="height:75px;text-align:center">
        <%=image_tag "logo2.png", :style=>"max-width:100%;max-height:100%"%>
      </div>
    </div>

    <div id="content">
      <%= show_flash_messages %>
      <%= yield %>
    </div>
  </body>
</html>
